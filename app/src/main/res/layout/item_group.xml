<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_5"
    tools:background="#fff"
    >

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="AA"
        />

    <toong.vn.bebetter.widget.imagebutton.ImageButton
        android:id="@+id/image_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:ib_leftDrawable="@drawable/ic_vector_edit"
        app:ib_title="@string/delete"
        />

    <toong.vn.bebetter.widget.imagebutton.ImageButton
        android:id="@+id/image_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        app:ib_leftDrawable="@drawable/ic_vector_delete"
        app:ib_title="@string/delete"
        android:layout_marginStart="@dimen/dp_10"
        />

</LinearLayout>